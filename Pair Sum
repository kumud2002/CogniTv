#Leetcode :https://leetcode.com/problems/two-sum/
class Solution(object):
    def twoSum(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: List[int]
        """
        # Create a list of tuples where each tuple contains the number and its original index
        nums_with_indices = [(num, idx) for idx, num in enumerate(nums)]
        
        # Sort the list of tuples based on the numbers
        nums_with_indices.sort(key=lambda x: x[0])
        
        # Initialize pointers
        start = 0
        end = len(nums_with_indices) - 1
        
        while start < end:
            # Calculate the sum of the current pair of numbers
            curr_sum = nums_with_indices[start][0] + nums_with_indices[end][0]
            if curr_sum < target:
                start += 1
            elif curr_sum > target:
                end -= 1
            else:
                # If the sum equals the target, return the original indices of the numbers
                return [nums_with_indices[start][1], nums_with_indices[end][1]]
